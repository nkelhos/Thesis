%
% Title page (PhD)
\def\phdtitlepage{%
  \thispagestyle{empty}%
  \null\vskip.5in%

  \begin{center}
    \uppercase\expandafter{\@thesistitle}
  \end{center}

  \vfill
  \begin{center}
    By\\
    \expandafter{\@thesisauthor}
  \end{center}

  \vspace{\fill}
  \begin{center}
    A DISSERTATION\\
    Submitted in partial fulfillment of the requirements for the degree of\\
    DOCTOR OF PHILOSOPHY\\
    \ifx \@program \@empty
      \ifx \@deptschool \@empty \else
        (\expandafter{\@deptschool})
      \fi
    \else
      (\expandafter{\@program})
    \fi
  \end{center}

  \begin{center}
    \@university\\
    \@thesisyear
  \end{center}

  \vfill
  \begin{center}
    \copyright\ \@thesisyear\ \@thesisauthor\
  \end{center}
  \newpage
}


%
% Signature page (PhD)
\def\phdsignaturepage{%
  \thispagestyle{empty}%
  This dissertation, "\expandafter{\@thesistitle}," is
  hereby approved in partial fulfillment of the
  requirements for the Degree of DOCTOR OF PHILOSOPHY
  IN \uppercase
  \ifx \@program \@empty
    \ifx \@deptschool \@empty \else
      \expandafter{\@deptschool}.
    \fi
  \else
    \expandafter{\@program}.
  \fi

  \vskip 0.75in
  \begin{flushright}
    \setstretch{1.00}%
    \ifx \@deptschool \@empty
      PROGRAM:\\
      \expandafter{\@program}
    \else
      Department of \expandafter{\@deptschool}
    \fi
  \end{flushright}

  \vfill
  \hspace{0.50in} Signatures:%
  \begin{flushright}%
    \setstretch{1.00}%
    \begin{tabular}{rl}%
      \ifx \@coadvisor \@empty
  Dissertation Advisor    & \makebox[3.50in]{\hrulefill}\\
                          & \small\expandafter{\@primaryadvisor}\\\\
      \else
  Dissertation Co-Advisor & \makebox[3.50in]{\hrulefill}\\
                          & \small\expandafter{\@primaryadvisor}\\\\
  Dissertation Co-Advisor & \makebox[3.50in]{\hrulefill}\\
                          & \small\expandafter{\@coadvisor}\\\\
      \fi
      \ifx \@advcommone \@empty \else
        Committee Member  & \makebox[3.50in]{\hrulefill}\\
                          & \small\expandafter{\@advcommone}\\\\
      \fi
      \ifx \@advcommtwo \@empty \else
        Committee Member  & \makebox[3.50in]{\hrulefill}\\
                          & \small\expandafter{\@advcommtwo}\\\\
      \fi
      \ifx \@advcommthree \@empty \else
        Committee Member  & \makebox[3.50in]{\hrulefill}\\
                          & \small\expandafter{\@advcommthree}\\\\
      \fi
	  % only advisor and 3 comitted members
      %\ifx \@advcommfour \@empty \else
      %  Committee Member  & \makebox[3.50in]{\hrulefill}\\
      %                    & \small\expandafter{\@advcommfour}\\\\
      %\fi
      \ifx \@schooldean \@empty
        \ifx \@deptchair \@empty \else
          Department Chair & \makebox[3.50in]{\hrulefill}\\
                           & \small\expandafter{\@deptchair}\\\\
        \fi
      \else
                     Dean & \makebox[3.50in]{\hrulefill}\\
                          & \small\expandafter{\@schooldean}\\\\
      \fi
                     Date & \makebox[3.50in]{\hrulefill}\\
    \end{tabular}%
  \end{flushright}%
  \renewcommand{\baselinestretch}{\lineheight}%
  \newpage
}


